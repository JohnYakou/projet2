{% extends 'base.html.twig' %} {% block title %}Gérer les élèves{%
endblock %} {% block body %}
<section>
  <table class="table table-dark">
    <thead>
      <tr>
        <th scope="col">#</th>

        <th scope="col">Nom et Prenom</th>
        <th scope="col">Classe</th>
        <th scope="col">Talent</th>
        <th scope="col">Mail</th>
        <th scope="col">Photo</th>
        <th scope="col">Supprimer</th>
        <th scope="col">Modifier</th>
      </tr>
    </thead>

    <tbody>
      {% for eleves in eleves %}
      <tr>
        <td scop="row">{{ eleves.id }}</td>
        <td>{{ eleves.eleve }}</td>
        <td>{{ eleves.classe }}</td>
        <td>{{ eleves.talent }}</td>
        <td>{{ eleves.mail }}</td>

        <td>
          <img style="width: 120px; height:120px" src="{{ eleves.photo }}" />
        </td>

        <td>
          <a
            class="btn btn-danger"
            href="{{ path('app_admin_delete_dangan', { id: eleves.id }) }}"
            >Supprimer</a
          >
        </td>

        <td>
          <a
            class="btn btn-success"
            href="{{ path('app_admin_edit_dangan', { id: eleves.id }) }}"
            >Modifier</a
          >
        </td>
      </tr>
      {% endfor %}

      {% for danganDeux in danganDeux %}
      <tr>
        <td scop="row">{{ danganDeux.id }}</td>
        <td>{{ danganDeux.eleve }}</td>
        <td>{{ danganDeux.classe }}</td>
        <td>{{ danganDeux.talent }}</td>
        <td>{{ danganDeux.mail }}</td>

        <td>
          <img style="width: 120px; height:120px" src="{{ danganDeux.photo }}" />
        </td>

        <td>
          <a
            class="btn btn-danger"
            href="{{ path('app_admin_delete_danganDeux', { id: danganDeux.id }) }}"
            >Supprimer</a
          >
        </td>

        <td>
          <a
            class="btn btn-success"
            href="{{ path('app_admin_edit_danganDeux', { id: danganDeux.id }) }}"
            >Modifier</a
          >
        </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
</section>
{% endblock %}
